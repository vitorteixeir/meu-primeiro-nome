programa {
  funcao inicio() {
    inteiro matriz[4][4] 

    para(inteiro l = 0; l < 4; l++){
        para(inteiro c = 0; c < 4; c++){
            leia(matriz[l][c])
            }
            escreva("\n")
            }

            para(inteiro l = 0; l < 4; l++){
                para(inteiro c = 0; c < 4; c++){
                    escreva(matriz[l][c]," | ")
                    }
                    escreva("\n")
                    }
                

  }
}
